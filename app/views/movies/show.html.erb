<p style="color: green"><%= notice %></p>


<div>
  <%= link_to "Edit this movie", edit_movie_path(@movie) %> |
  <%= link_to "Back to movies", movies_path %>

  <%= button_to "Destroy this movie", @movie, method: :delete %>
</div>


<div id="movies">
  <ol>
    <strong>Title:</strong> <%= @movie.movie_title%>,<br>
    <strong>Text:</strong> <%= @movie.text%>,<br>
    <strong>Category:</strong> <%= @movie.category_name%>,<br>
    <strong>Average rating:</strong> <%=@average_rating%><br>
  </ol>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</div>

